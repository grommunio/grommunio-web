<?xml version="1.0"?>
<!DOCTYPE plugin SYSTEM "manifest.dtd">
<plugin version="2">
	<info>
		<version>0.2</version>
		<name>folderwidgets</name>
		<title>Folder widgets</title>
		<author>Kopano</author>
		<authorURL>http://www.kopano.com</authorURL>
		<description>A collection of widgets which can show the contents of some of the default folders for a user.</description>
	</info>
	<components>
		<component>
			<files>
				<client>
					<clientfile load="release">js/folderwidgets.js</clientfile>
					<clientfile load="debug">js/folderwidgets-debug.js</clientfile>
					<clientfile load="source">js/AbstractFolderWidget.js</clientfile>
					<clientfile load="source">js/AppointmentsWidget.js</clientfile>
					<clientfile load="source">js/TasksWidget.js</clientfile>
					<clientfile load="source">js/MailWidget.js</clientfile>
				</client>
				<resources>
					<resourcefile>resources/css/folderwidgets.css</resourcefile>
				</resources>
			</files>
		</component>
	</components>
</plugin>
